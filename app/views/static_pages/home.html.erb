<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <h2>Enter your Asana API Key:</h2>
    <%= form_tag({controller: "projects", action: "index"}, method: "get", class: "form_control") do %>
      <%= text_field_tag "user[api_key]", '', autocomplete: "off" %>
      <p>
        <%= submit_tag "Get Started", class: "btn btn-default" %>
      </p>
    <% end %>
  </div>
</div>