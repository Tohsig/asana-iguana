<%= form_tag({controller: "projects", action: "show"}, method: "get") do %>
  <%= hidden_field_tag "project[id]", @project_id %>
  <%= hidden_field_tag "project[name]", @project_name %>
  <%= hidden_field_tag "project[start_date]",
                       set_week(start_date: @start_date, type: type) %>
  <%= hidden_field_tag "project[end_date]",
                       set_week(end_date: @start_date, type: type) %>
  <%= submit_tag "#{button_text(type)}", class: "btn btn-info" %>
<% end %>